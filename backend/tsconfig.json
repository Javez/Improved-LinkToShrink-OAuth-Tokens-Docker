{
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",
    "rootDirs": ["./src"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types/"],
    "types": ["jest", "node"]
  },
  "include": ["tests"],
  "exclude": ["node_modules"]
}
